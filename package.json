{
  "name": "bun-minimal-react",
  "module": "src/index.tsx",
  "type": "module",
  "scripts": {
    "build": "rm -rf ./dist ; cp -r ./public ./dist ; NODE_ENV=production bun build ./src/index.tsx --outdir ./dist --minify",
    "dev": "rm -rf ./out ; cp -r ./public ./out & bun build ./src/index.tsx --outdir ./out --watch",
    "watcher": "bunx reload -b -d ./out"
  },
  "devDependencies": {
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@types/web": "^0.0.125",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
